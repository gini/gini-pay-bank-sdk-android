<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/gpb_digital_invoice_switch_thumb" />
            <size android:width="28dp" android:height="28dp"/>
            <stroke android:width="1dp" android:color="@color/gpb_digital_invoice_switch_track_disabled"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/gpb_digital_invoice_switch_thumb" />
            <size android:width="28dp" android:height="28dp"/>
            <stroke android:width="1dp" android:color="@color/gpb_digital_invoice_switch_track_checked"/>
        </shape>
    </item>
</selector>