<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gpb_digital_invoice_fragment_background"
    tools:context=".digitalinvoice.DigitalInvoiceFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gpb_line_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:itemCount="4"
        tools:listitem="@layout/gpb_item_digital_invoice_line_item" />

    <Button
        android:id="@+id/gpb_pay_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gpb_digital_invoice_pay_button_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/gpb_digital_invoice_pay_button_margin"
        android:backgroundTint="@color/gpb_digital_invoice_pay_button"
        android:textColor="@color/gpb_digital_invoice_pay_button_text"
        tools:text="Pay 2/2" />

</RelativeLayout>