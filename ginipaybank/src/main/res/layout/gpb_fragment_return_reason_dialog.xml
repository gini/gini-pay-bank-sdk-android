<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gpb_digital_invoice_return_reason_dialog_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/gpb_digital_invoice_return_reason_dialog_item_horizontal_padding"
        android:paddingTop="@dimen/gpb_digital_invoice_return_reason_dialog_item_vertical_padding"
        android:paddingEnd="@dimen/gpb_digital_invoice_return_reason_dialog_item_horizontal_padding"
        android:paddingBottom="@dimen/gpb_digital_invoice_return_reason_dialog_item_vertical_padding"
        android:text="@string/gpb_digital_invoice_return_reason_dialog_title"
        android:textAppearance="@style/GiniCaptureTheme.DigitalInvoice.ReturnReasonDialog.Title.TextStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gpb_digital_invoice_return_reason_dialog_divider" />

    <ListView
        android:id="@+id/gpb_return_reasons_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gpb_digital_invoice_return_reason_dialog_divider"
        android:dividerHeight="1dp"
        tools:listitem="@layout/gpb_item_return_reason" />

</LinearLayout>