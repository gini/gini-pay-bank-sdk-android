<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gpb_line_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/gpb_digital_invoice_line_item_horizontal_margin"
    android:layout_marginTop="@dimen/gpb_digital_invoice_line_item_vertical_margin"
    android:layout_marginEnd="@dimen/gpb_digital_invoice_line_item_horizontal_margin"
    android:layout_marginBottom="@dimen/gpb_digital_invoice_line_item_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/gpb_digital_invoice_line_item_background"
    app:cardCornerRadius="@dimen/gpb_digital_invoice_line_item_corner_radius"
    app:cardElevation="@dimen/gpb_digital_invoice_line_item_card_elevation"
    app:strokeColor="@color/gpb_digital_invoice_line_item_stroke"
    app:strokeWidth="@dimen/gpb_digital_invoice_line_item_stroke_width">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="@dimen/gpb_digital_invoice_line_item_padding_left"
        android:paddingEnd="@dimen/gpb_digital_invoice_line_item_padding"
        android:paddingBottom="@dimen/gpb_digital_invoice_line_item_padding">

        <CheckBox
            android:id="@+id/gpb_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/gpb_digital_invoice_line_item_checkbox_margin_right" />

        <TextView
            android:id="@+id/gpb_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gpb_checkbox"
            android:layout_marginEnd="@dimen/gpb_digital_invoice_line_item_description_margin_right"
            android:layout_marginBottom="@dimen/gpb_digital_invoice_line_item_description_margin_bottom"
            android:layout_toStartOf="@id/gpb_edit"
            android:layout_toEndOf="@id/gpb_checkbox"
            android:minLines="2"
            android:textAppearance="@style/GiniCaptureTheme.DigitalInvoice.LineItem.Description.TextStyle"
            tools:text="Nike Sportswear Air Max 97 - Sneaker Low" />

        <TextView
            android:id="@+id/gpb_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gpb_description"
            android:layout_alignStart="@id/gpb_description"
            android:text="@string/gpb_digital_invoice_line_item_quantity"
            android:textAppearance="@style/GiniCaptureTheme.DigitalInvoice.LineItem.Quantity.TextStyle" />

        <TextView
            android:id="@+id/gpb_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gpb_quantity_label"
            android:layout_toEndOf="@id/gpb_quantity_label"
            android:textAppearance="@style/GiniCaptureTheme.DigitalInvoice.LineItem.Quantity.TextStyle"
            tools:text=" 1" />

        <Button
            android:id="@+id/gpb_edit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gpb_description"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/gpb_digital_invoice_line_item_edit_margin_right"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:drawableEnd="@drawable/gpb_edit_button_icon"
            app:iconPadding="@dimen/gpb_digital_invoice_line_item_edit_drawable_padding"
            android:focusable="false"
            android:text="@string/gpb_digital_invoice_line_item_edit"
            android:textAppearance="@style/GiniCaptureTheme.DigitalInvoice.LineItem.Edit.TextStyle" />

        <TextView
            android:id="@+id/gpb_gross_price_integral_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gpb_quantity"
            android:layout_toStartOf="@id/gpb_gross_price_fractional_part"
            android:includeFontPadding="false"
            android:textAppearance="@style/GiniCaptureTheme.DigitalInvoice.LineItem.GrossPrice.Integral.TextStyle"
            tools:text="â‚¬76" />

        <TextView
            android:id="@+id/gpb_gross_price_fractional_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/gpb_gross_price_integral_part"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/GiniCaptureTheme.DigitalInvoice.LineItem.GrossPrice.Fractional.TextStyle"
            tools:text=".48" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>